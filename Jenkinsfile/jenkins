pipeline {
    agent any

    environment {
        BACKEND_IMAGE = "my-backend"
        FRONTEND_IMAGE = "my-frontend"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/MF-Vv/PRE-TASK.git'
            }
        }

        stage('Build & Push Backend') {
            steps {
                script {
                    sh "docker build -t ${BACKEND_IMAGE} ./backend-app"
                }
            }
        }

        stage('Build & Push Frontend') {
            steps {
                script {
                    sh "docker build -t ${FRONTEND_IMAGE} ./frontend-app"
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh "docker-compose down && docker-compose up -d"
                }
            }
        }
    }
}
